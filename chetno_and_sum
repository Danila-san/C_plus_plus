#include <iostream>
#include <cmath>
#include <cctype>
#include <cstring>
using namespace std;
int main()
{
	int num[5];
	int sum = 0;
	int chet = 0;
	
	cout << "Введите число 1 : ";
	cin >> num[0];
	cout << "Введите число 2 : ";
	cin >> num[1];
	cout << "Введите число 3 : ";
	cin >> num[2];
	cout << "Введите число 4 : ";
	cin >> num[3];
	cout << "Введите число 5 : ";
	cin >> num[4];
	
	for(int i = 0; i < 5; ++i )
		{
			if(num[i]%2==0)
			{
			sum += num[i];
			++chet;
			}
		}
	cout << "Чётных чисел : " << chet << endl;
	cout << "Сумма чётных чисел : " << sum << endl;
	
	return 0;
}